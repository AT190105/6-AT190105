#include <stdio.h>
	int main (){ 
		float x;
		printf("nhap so nguyen 1: ");
		scanf("%f",&x);
		float y;
		printf("nhap so nguyen 2: ");
		scanf("%f",&y);
        float tong=x+y;
        float hieu=x-y;
        float tich=x*y;
        float thuong=x/y;
		printf("tong=%f",tong);
		printf("\nhieu=%f",hieu);
		printf("\ntich=%f",tich);
		if(y!=0){
			printf("\nthuong=%f",thuong);	
		} 
		if(y==0){
				printf("\nthuong=vo nghiem");
		}
	    return 0;
	}
